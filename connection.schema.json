{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "title": "Name",
      "type": "string",
      "minLength": 1,
      "default": "DuckDB"
    },
    "databaseFilePath": {
      "title": "Database file",
      "type": "string",
      "minLength": 1
    },
    "readWrite": {
      "title": "Enable Read/Write",
      "type": "boolean",
      "default": false,
      "description": "Note: Read/Write connections prevent other connections until they are closed."
    }
  }
}